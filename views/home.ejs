<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" roe="3"></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>
    <div id="posts-list-container">
        <ul>
            <% for (post of posts){%>
                <li>
                    <%= post.content %>
                    <small>
                        <%= post.user.name %>  
                    </small>
                </li>
            <% } %>
        </ul>
    </div>
</section>
